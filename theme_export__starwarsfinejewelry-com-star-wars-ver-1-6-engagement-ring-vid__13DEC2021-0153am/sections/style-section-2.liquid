{% if section.settings.show_section == true %}
<section>
  <img class="lazyload section-bg"
       src="{{ section.settings.bg_image | img_url: 'master' }}"
       data-src="{{ section.settings.bg_image | img_url:"master" }}"
       data-sizes="auto"
       alt="" />
  <div class="page-width">
    <div class="grid">
      <div class="grid__item medium-up--one-half image-wrapper">
        <img class="lazyload"
             src="{{ section.settings.image | img_url: 'master' }}"
             data-src="{{ section.settings.image | img_url:"master" }}"
             data-sizes="auto"
             alt="" />
      </div>
      <div class="grid__item medium-up--one-half content-wrapper">
        <div class="content small--text-center">
          {% if section.settings.title != blank %}
          <h2>{{ section.settings.title }}</h2>
          {% endif %}
          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn btn-transparent">
            {{ section.settings.button_label }}
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}

{% schema %}
  {
    "name": "Style section 2",
	"class": "style-section style-section-2",
    "settings": [
	  {
		"type": "checkbox",
		"id": "show_section",
		"label": "Show section",
		"default": true
	  },
	  {
		"type": "image_picker",
		"id": "bg_image",
		"label": "Background image"
	  },
	  {
		"type": "image_picker",
		"id": "image",
		"label": "Image"
	  },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
		"default": "Shop style"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
	]
  }
{% endschema %}

