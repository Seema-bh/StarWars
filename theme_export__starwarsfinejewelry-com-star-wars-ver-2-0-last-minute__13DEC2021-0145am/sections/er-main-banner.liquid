{% if section.settings.enable_section %}
<section class="section-wrapper">
  <div class="page-width">
    <div class="banner-content text-center">
      <div class="content">
        {% if section.settings.title != blank %}
        <h1 class="title">{{ section.settings.title }}</h1>
        {% endif %}
        {% if section.settings.sub_title != blank %}
        <span class="sub-title">{{ section.settings.sub_title }}</span>
        {% endif %}
      </div>
      {% assign image = section.settings.banner_image | img_url: 'master' %}
      <div class="image-wrapper">
        <img class="lazyload" 
             src="{{ image }}"
             data-src="{{ image }}" 
             data-sizes="auto" 
             alt="" />
      </div>
    </div>
  </div>
</section>
{% endif %}

{% schema %}
  {
    "name": "Main banner",
	"class": "er-main-banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable section",
		"default": true
      },
	  {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
	  {
        "type": "text",
        "id": "sub_title",
        "label": "Sub Title",
        "default": "Sub Title"
      },
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Image",
        "info": "Recommended size 1132x552 (px)"
      }
	]
  }
{% endschema %}

