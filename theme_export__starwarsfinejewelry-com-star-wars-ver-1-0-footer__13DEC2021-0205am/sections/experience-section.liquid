<section data-section-id="{{ section.id }}" data-section-type="starwars-experience-section">
  {% unless section.settings.horizontal-text == blank %}
  <span class="horizontal-text">{{ section.settings.horizontal-text }}</span>
  {% endunless %}
  {% unless section.settings.vertical-text == blank %}
  <span class="vertical-text">{{ section.settings.vertical-text }}</span>
  {% endunless %}
  {% unless section.settings.experience_image == nil %}
  <img src="{{ section.settings.experience_image | img_url: "master" }}" />
  {% endunless %}
  <div class="page-width
  {% if section.settings.vertical_alignment == 'center' %} content_mid-align{% endif %}
  {% if section.settings.vertical_alignment == 'bottom' %} content_bottom-align{% endif %}">
  <div class="sw__experience-content">
    {% unless section.settings.title == blank %}
    <h2>{{ section.settings.title }}</h2>
    {% endunless %}
    {% unless section.settings.paragraph == blank %}
    {{ section.settings.paragraph }}
    {% endunless %}
    {% unless section.settings.button == blank %}
    {% unless section.settings.button-url == blank %}
    <a href="{{ section.settings.button-url }}/" class="btn btn_primary">{% include 'icon-explore' %}{{ section.settings.button }}</a>
    {% endunless %}
    {% endunless %}
  </div>
</div>
</section>

{% schema %}
{
  "name": "Experience Section",
  "class": "index-section index_experince-section",
  "settings": [
  {
    "type": "image_picker",
    "id": "experience_image",
    "label": "Image"
  },
  {
    "type": "select",
    "id": "vertical_alignment",
    "label": "Content Alignment (Vertical)",
    "options": [
    {
      "value": "top",
      "label": "Top"
    },
    {
      "value": "center",
      "label": "Center"
    },
    {
      "value": "bottom",
      "label": "Bottom"
    }
    ],
    "default": "top"
  },
  {
    "type": "text",
    "id": "title",
    "label": "Title",
    "default": "Behold!"
  },
  {
    "type": "richtext",
    "id": "paragraph",
    "label": "Paragraph",
    "default": "<p>Jump into Hyperspace and unravel the exclusive world of Star Wars. Only a true Jedi can disclose the secret to claiming the special surprise!</p>"
  },
  {
    "type": "text",
    "id": "button",
    "label": "Button Text",
    "default": "UNBOX THE EXPERIENCE"
  },
  {
    "type": "url",
    "id": "button-url",
    "label": "Button URL"
  },
  {
    "type": "text",
    "id": "horizontal-text",
    "label": "Horizontal Text",
    "default": "THE NEW EXPERIENCE"
  },
  {
    "type": "text",
    "id": "vertical-text",
    "label": "Vertical Text",
    "default": "MAY THE FORCE BE WITH YOU"
  }
  ],
  "presets": [
  {
    "name": "Experience Section",
    "category": "Advanced layout"
  }
  ]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

