<div class="grid">
  <div class="grid__item medium-up--five-sixths medium-up--push-one-twelfth text-center">
    <div class="section-header text-center">
      {% unless section.settings.title == blank %}
      <h2>{{ section.settings.title }}</h2>
      {% else %}
      <h2>{{ page.title }}</h2>
      {% endunless %}
      {% unless section.settings.paragraph == blank %}
      {{ section.settings.paragraph }}
      {% else %}
      {{ page.content }}
      {% endunless %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Page Content",
    "settings": [
      {
		"type": "text",
		"id": "title",
		"label": "Title",
		"default": "JEWELRY CARE & ENHANCEMENT"
      },
      {
        "type": "richtext",
        "id": "paragraph",
        "label": "Paragraph",
        "default": "<p>Paragraph</p>"
      }
	]
  }
{% endschema %}

