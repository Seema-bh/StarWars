{% unless section.settings.hide_section == true %}
<div class="page-width">
  {% unless section.settings.section_title == blank %}
  <div class="section-header text-center">
    <h2>{{ section.settings.section_title }}</h2>
  </div>
  {% endunless %}
</div>
<section class="dark-side-section">
  {% unless section.settings.ds_vertical-text == blank %}
  <span class="vertical-text">{{ section.settings.ds_vertical-text }}</span>
  {% endunless %}
  <div class="sw__collection-content">
    <div class="slide-content">
      {% for block in section.blocks %}
      {% if block.type == 'dark-side-image' %}
      {% unless block.settings.collection_image == nil %}
      <div>
        <img class="lazyload"
        data-src="{{ block.settings.collection_image | img_url: "x650" }}"
        data-sizes="auto"
        alt="" />
      </div>
      {% endunless %}
      {% endif %}
      {% endfor %}
    </div>
    <div class="text-content">
      {% unless section.settings.ds_title == blank %}
      <h2>{{ section.settings.ds_title }}</h2>
      {% endunless %}
      {% unless section.settings.ds_paragraph == blank %}
      {{ section.settings.ds_paragraph }}
      {% endunless %}
      {% unless section.settings.ds_primary_button == blank %}
      {% unless section.settings.ds_primary-button-url == blank %}
      <a href="{{ section.settings.ds_primary-button-url }}/" class="btn btn_primary">{% include 'icon-explore' %}{{ section.settings.ds_primary_button }}</a>
      {% endunless %}
      {% endunless %}
      {% unless section.settings.ds_secondary_button == blank %}
      {% unless section.settings.ds_secondary-button-url == blank %}
      <a href="{{ section.settings.ds_secondary-button-url }}/" class="btn btn_secondary">{% include 'icon-view-collection' %}{{ section.settings.ds_secondary_button }}</a>
      {% endunless %}
      {% endunless %}
    </div>
  </div>
</section>
<section class="index-section light-side-section">
  <div class="sw__collection-content">
    <div class="slide-content">
      {% for block in section.blocks %}
      {% if block.type == 'light-side-image' %}
      {% unless block.settings.collection_image == nil %}
      <div>
        <img class="lazyload"
        data-src="{{ block.settings.collection_image | img_url: "x650" }}"
        data-sizes="auto"
        alt="" />
      </div>
      {% endunless %}
      {% endif %}
      {% endfor %}
    </div>
    <div class="text-content">
      {% unless section.settings.ls_title == blank %}
      <h2>{{ section.settings.ls_title }}</h2>
      {% endunless %}
      {% unless section.settings.ls_paragraph == blank %}
      {{ section.settings.ls_paragraph }}
      {% endunless %}
      {% unless section.settings.ls_primary_button == blank %}
      {% unless section.settings.ls_primary-button-url == blank %}
      <a href="{{ section.settings.ls_primary-button-url }}/" class="btn btn_primary">{% include 'icon-explore' %}{{ section.settings.ls_primary_button }}</a>
      {% endunless %}
      {% endunless %}
      {% unless section.settings.ls_secondary_button == blank %}
      {% unless section.settings.ls_secondary-button-url == blank %}
      <a href="{{ section.settings.ls_secondary-button-url }}/" class="btn btn_secondary">{% include 'icon-view-collection' %}{{ section.settings.ls_secondary_button }}</a>
      {% endunless %}
      {% endunless %}
    </div>
  </div>
  {% unless section.settings.ls_vertical-text == blank %}
  <span class="vertical-text">{{ section.settings.ls_vertical-text }}</span>
  {% endunless %}
</section>
{% endunless %}

