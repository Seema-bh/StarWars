    "id": "ds_secondary_button",
    "label": "Button Text(Secondary)",
    "default": "View All Collections"
  },
  {
    "type": "url",
    "id": "ds_secondary-button-url",
    "label": "Button URL(Secondary)"
  },
  {
    "type": "text",
    "id": "ds_vertical-text",
    "label": "Vertical Text",
    "default": "Collection"
  },
  {
    "type": "header",
    "content": "Light Side Content"
  },
  {
    "type": "richtext",
    "id": "ls_title",
    "label": "Title",
    "default": "<p>Title</p>"
  },
  {
    "type": "richtext",
    "id": "ls_paragraph",
    "label": "Paragraph",
    "default": "<p>Paragraph</p>"
