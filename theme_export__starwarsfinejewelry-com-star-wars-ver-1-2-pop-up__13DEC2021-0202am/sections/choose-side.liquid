  {
    "type": "url",
    "id": "ls_primary-button-url",
    "label": "Button URL(Primary)"
  },
  {
    "type": "text",
    "id": "ls_secondary_button",
    "label": "Button Text(Secondary)",
    "default": "View All Collections"
  },
  {
    "type": "url",
    "id": "ls_secondary-button-url",
    "label": "Button URL(Secondary)"
  },
  {
    "type": "text",
    "id": "ls_vertical-text",
    "label": "Vertical Text",
    "default": "Collection"
  }
  ],
  "blocks": [
  {
    "type": "dark-side-image",
    "name": "Dark Side Image",
    "settings": [
    {
      "type": "image_picker",
      "id": "collection_image",
      "label": "Collection Image (Dark Side)"
    }
    ]
  },
  {
    "type": "light-side-image",
    "name": "Light Side Image",
    "settings": [
    {
      "type": "image_picker",
      "id": "collection_image",
      "label": "Collection Image (Light Side)"
    }
    ]
  }
  ]
}
