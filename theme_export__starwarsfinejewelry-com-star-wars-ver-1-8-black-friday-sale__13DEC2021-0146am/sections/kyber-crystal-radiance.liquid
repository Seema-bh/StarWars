{% if section.settings.show_section == true %}
<section>
  <div class="page-width">
    <div class="section-content text-center">
      {% if section.settings.image != blank %}
      <img class="lazyload"
           src="{{ section.settings.image | img_url: 'master' }}"
           data-src="{{ section.settings.image | img_url:"master" }}"
           data-sizes="auto"
           alt="" />
      {% endif %}
      {% assign localName = request.locale.name | handle %}
      {% if localName == "english"%}
      {% if section.settings.text != blank %}
      <div class="text">
        {{ section.settings.text }}
      </div>
      {% endif %}
      {% else %}
      {% if section.settings.text_japanese != blank %}
      <div class="text">
        {{ section.settings.text_japanese }}
      </div>
      {% endif %}
      {% endif %}
      {% assign localName = request.locale.name | handle %}
      {% if localName == "english"%}
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="btn_style2">
        {{ section.settings.button_label }}
      </a>
      {% endif %}
      {% else %}
      {% if section.settings.button_label_japanese != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="btn_style2">
        {{ section.settings.button_label_japanese }}
      </a>
      {% endif %}
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

{% schema %}
  {
    "name": "Kyber crystal radiance",
	"class": "kyber-crystal-radiance-section",
    "settings": [
	  {
        "type": "checkbox",
        "id": "show_section",
        "label": "Show Section",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "Recommended size: 512px * 127px"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Text goes here.</p>"
      },
      {
        "type": "richtext",
        "id": "text_japanese",
        "label": "Text (Japanese)",
        "default": "<p>ガーディアンの平和と正義にインスピレーションを受けたペンダント。あなたの内なるジェダイの力の輝きと力を呼び起こすこのペンダントで銀河を守ろう</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "text",
        "id": "button_label_japanese",
        "label": "Button label (Japanese)"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ]
  }
{% endschema %}

