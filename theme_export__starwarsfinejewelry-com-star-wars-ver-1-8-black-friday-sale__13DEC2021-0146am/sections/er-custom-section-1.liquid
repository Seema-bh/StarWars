    <div class="custom-section-1">
      <div class="section-content">
        {% if section.settings.title != blank %}
        <h3 class="title">
          {{ section.settings.title }}
        </h3>
        {% endif %}
        {% if section.settings.text != blank %}
        <div class="text">{{ section.settings.text }}</div>
        {% endif %}
        {% if section.settings.button_label and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="btn btn-secondary">
          {{ section.settings.button_label }}
        </a>
        {% endif %}
      </div>

      <div class="section-images">
        <img class="lazyload bg-image" 
             src="https://cdn.shopify.com/s/files/1/0465/8787/1396/files/Mask_Group_26911.png?v=1632742726"
             data-src="https://cdn.shopify.com/s/files/1/0465/8787/1396/files/Mask_Group_26911.png?v=1632742726" 
             data-sizes="auto" 
             alt="" />
        {% assign banner_image_1 = section.settings.image_1 | img_url: 'master' %}
        {% if section.settings.image_1 != blank %}
        <div class="image-wrapper image_1 wow animate__fadeInDown" data-wow-duration="5s" data-wow-delay="-1.4s">
          <img class="lazyload" 
               src="{{ banner_image_1 }}"
               data-src="{{ banner_image_1 }}" 
               data-sizes="auto" 
               alt="" />
        </div>
        {% endif %}
        {% assign banner_image_2 = section.settings.image_2 | img_url: 'master' %}
        {% if section.settings.image_2 != blank %}
        <div class="image-wrapper image_2 wow animate__fadeInDown" data-wow-duration="4s" data-wow-delay="-1.2s">
          <img class="lazyload" 
               src="{{ banner_image_2 }}"
               data-src="{{ banner_image_2 }}" 
               data-sizes="auto" 
               alt="" />
        </div>
        {% endif %}
        {% assign banner_image_3 = section.settings.image_3 | img_url: 'master' %}
        {% if section.settings.image_3 != blank %}
        <div class="image-wrapper image_3 wow animate__fadeInUp" data-wow-duration="3.2s" data-wow-delay="-1s">
          <img class="lazyload" 
               src="{{ banner_image_3 }}"
               data-src="{{ banner_image_3 }}" 
               data-sizes="auto" 
               alt="" />
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% endif %}

{% schema %}
{
"name": "Custom section 1",
"class": "er-custom-section-1",
"settings": [
{
"type": "checkbox",
"id": "enable_section",
"label": "Enable section",
"default": true
},
{
"type": "text",
"id": "title",
"label": "Title",
"default": "Title"
},
{
"type": "richtext",
"id": "text",
"label": "Text",
"default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
},
{
"type": "text",
"id": "button_label",
"label": "Button label",
"default": "Discover"
},
{
"type": "url",
"id": "button_url",
"label": "Button link"
},
{
"type": "image_picker",
"id": "image_1",
"label": "Image 1"
},
{
"type": "image_picker",
"id": "image_2",
"label": "Image 2"
},
{
"type": "image_picker",
"id": "image_3",
"label": "Image 3"
}
]
}
{% endschema %}
