{% if section.settings.enable_section %}
<section class="section-spacing">
  <div class="page-width text-center">
    <div class="custom-section-2 wow animate__fadeInUp" data-wow-duration="2.8s">
      <div class="section-banner">
        {% assign banner = section.settings.banner | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <div class="image-wrapper absolute-image-wrapper" style="padding-top:{{ 1 | divided_by: section.settings.banner.aspect_ratio | times: 100 }}%;">
          <img class="lazyload" 
               data-src="{{ banner }}" 
               data-widths="[180, 360, 375, 414, 540, 800, 1024, 1280, 1340, 1920 ]" 
               data-aspectratio="{{ section.settings.banner.aspect_ratio }}" 
               data-sizes="auto"
               alt="" />
        </div>
      </div>
      <div class="section-content">
        <div class="images-wrapper">
          <img class="lazyload bg-image" 
               src="https://cdn.shopify.com/s/files/1/0465/8787/1396/files/Group_101682.png?v=1632807644"
               data-src="https://cdn.shopify.com/s/files/1/0465/8787/1396/files/Group_101682.png?v=1632807644" 
               data-sizes="auto" 
               alt="" />
          {% assign banner_image_1 = section.settings.image_1 | img_url: 'master' %}
          <div class="image-wrapper image_1 wow animate__fadeInTopLeft" data-wow-duration="4.5s" data-wow-delay="-1.3s">
            <img class="lazyload" 
                 src="{{ banner_image_1 }}"
                 data-src="{{ banner_image_1 }}" 
                 data-sizes="auto" 
                 alt="" />
          </div>
          {% assign banner_image_2 = section.settings.image_2 | img_url: 'master' %}
          <div class="image-wrapper image_2 wow animate__fadeInBottomRight" data-wow-duration="5.5s" data-wow-delay="-1.3s">
            <img class="lazyload" 
                 src="{{ banner_image_2 }}"
                 data-src="{{ banner_image_2 }}" 
                 data-sizes="auto" 
                 alt="" />
          </div>
        </div>
        {% if section.settings.title != blank %}
        <h2 class="title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.button_label and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="btn btn-secondary">
          {{ section.settings.button_label }}
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% endif %}

{% schema %}
{
  "name": "Custom section 2",
  "class": "er-custom-section-2",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_section",
      "label": "Enable section",
      "default": true
    },
	{
      "type": "image_picker",
      "id": "banner",
      "label": "Banner"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
	{
      "type": "text",
      "id": "button_label",
      "label": "Button label",
	  "default": "Discover"
    },
	{
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    },
	{
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
	{
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    }
  ]
}
{% endschema %}
