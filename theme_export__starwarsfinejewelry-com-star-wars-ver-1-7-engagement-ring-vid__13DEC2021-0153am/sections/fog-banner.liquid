{% assign localName = request.locale.name | handle %}
{% unless section.settings.hide_section == true %}
<div class="sw__banner slick-initialized">
  <div class="sw__banner-slide">
    {% unless section.settings.banner_large == nil %}
    <img class="lazyload small--hide"
    src="{{ section.settings.banner_large | img_url: 'master' }}"
    data-src="{{ section.settings.banner_large | img_url: 'master' }}"
    data-sizes="auto"
    alt="" />
    {% unless section.settings.banner_small == nil %}
    <img class="lazyload medium-up--hide"
    src="{{ section.settings.banner_small | img_url: 'master' }}"
    data-src="{{ section.settings.banner_small | img_url: 'master' }}"
    data-sizes="auto"
    alt="" />
    {% endunless %}
    <div class="page-width sw__banner-text
    {% if section.settings.horizontal_alignment == 'center' %} content_center-aligned{% endif %}
    {% if section.settings.horizontal_alignment == 'right' %} content_right-aligned{% endif %}">
    <div class="sw__banner-text-container
    {% if section.settings.vertical_alignment == 'middle' %} content_middle-aligned{% endif %}
    {% if section.settings.vertical_alignment == 'bottom' %} content_bottom-aligned{% endif %}
    {% if section.settings.text_align == 'center' %} text-center{% endif %}
    {% if section.settings.text_align == 'right' %} text-right{% endif %}
    {% if section.settings.full_width_content and section.settings.textand_button_align == 'text_left'%} full-width-alignment1{% endif %}
    {% if section.settings.full_width_content and section.settings.textand_button_align == 'text_right'%} full-width-alignment2{% endif %}">
    {% if localName == 'english' %}
    {% unless section.settings.title == blank %}
    <h1>{{ section.settings.title }}</h1>
    {% endunless %}
    {% unless section.settings.subtitle == blank %}
    <h5>{{ section.settings.subtitle }}</h5>
    {% endunless %}
    {% else %}
    {% unless section.settings.title-ja == blank %}
    <h1>{{ section.settings.title-ja }}</h1>
    {% endunless %}
    {% unless section.settings.subtitle-ja == blank %}
    <h5>{{ section.settings.subtitle-ja }}</h5>
    {% endunless %}
    {% endif %}
    {% unless section.settings.paragraph == blank %}
    <p>{{ section.settings.paragraph }}</p>
    {% endunless %}
    {% unless blsectionock.settings.button_label == blank %}
    {% unless section.settings.button_url == blank %}
    <a href="{{ section.settings.button_url }}" class="btn_style1">{{ section.settings.button_label }}</a>
    {% endunless %}
    {% endunless %}
  </div>
</div>
{% endunless %}
</div>
</div>
{% endunless %}

<style>
  .sw__banner-text-container {
    top: 0 !important;
    opacity: 1 !important;
  }
</style>

{% schema %}
{
  "name": "Banner Section",
  "class": "themepage-banner-section",
  "settings": [
  {
    "type": "checkbox",
    "id": "hide_section",
    "label": "Hide Section",
    "default": false
  },
  {
    "type": "image_picker",
    "id": "banner_large",
    "label": "Banner Image (Desktop)",
    "info": "Recommended size 2560x1356 (px)"
  },
  {
    "type": "image_picker",
    "id": "banner_small",
    "label": "Banner Image (Mobile)",
    "info": "Recommended size 800x1470 (px)"
  },
  {
    "type": "select",
    "id": "horizontal_alignment",
    "label": "Content Alignment (Horizontal)",
    "options": [
    {
      "value": "left",
      "label": "Left"
    },
    {
      "value": "center",
      "label": "Center"
    },
    {
      "value": "right",
      "label": "Right"
    }
    ],
    "default": "left"
  },
  {
    "type": "select",
    "id": "vertical_alignment",
    "label": "Content Alignment (Vertical)",
    "options": [
    {
      "value": "top",
      "label": "Top"
    },
    {
      "value": "middle",
      "label": "Middle"
    },
    {
      "value": "bottom",
      "label": "Bottom"
    }
    ],
    "default": "top"
  },
  {
    "type": "select",
    "id": "text_align",
    "label": "Text Align",
    "options": [
    {
      "value": "left",
      "label": "Left"
    },
    {
      "value": "center",
      "label": "Center"
    },
    {
      "value": "right",
      "label": "Right"
    }
    ],
    "default": "left"
  },
  {
    "type": "checkbox",
    "id": "full_width_content",
    "label": "Text and button side by side",
    "default": false
  },
  {
    "type": "select",
    "id": "textand_button_align",
    "label": "Text & Button Align",
    "options": [
    {
      "value": "text_left",
      "label": "Text Left Button Right"
    },
    {
      "value": "text_right",
      "label": "Text Right Button Left"
    }
    ],
    "default": "text_left"
  },
  {
    "type": "text",
    "id": "title",
    "label": "Title",
    "default": "Title"
  },
  {
    "type": "text",
    "id": "title-ja",
    "label": "Title (JA)",
    "default": "銀河の力"
  },
  {
    "type": "text",
    "id": "subtitle",
    "label": "Subtitle",
    "default": "Han Solo & princess leia"
  },
  {
    "type": "text",
    "id": "subtitle-ja",
    "label": "Subtitle (JA)",
    "default": "CHEWBACCA™とSTORMTROOPER"
  },
  {
    "type": "richtext",
    "id": "paragraph",
    "label": "Paragraph",
    "default": "<p>Paragraph</p>"
  },
  {
    "type": "text",
    "id": "button_label",
    "label": "Button Label",
    "default": "Shop Now"
  },
  {
    "type": "url",
    "id": "button_url",
    "label": "Button URL"
  }
  ]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

