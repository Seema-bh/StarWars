{% if section.settings.show_section == true %}
<section>
  <img class="lazyload small--hide"
       src="{{ section.settings.desk_image | img_url: 'master' }}"
       data-src="{{ section.settings.desk_image | img_url:"master" }}"
       data-sizes="auto"
       alt="" />
  <img class="lazyload medium-up--hide"
       src="{{ section.settings.mob_image | img_url: 'master' }}"
       data-src="{{ section.settings.mob_image | img_url:"master" }}"
       data-sizes="auto"
       alt="" />
  <div class="page-width">
    <div class="section-content small--text-center">
      {% if section.settings.title != blank %}
      <h2>{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
      <div class="text">
        {{ section.settings.text }}
      </div>
      {% endif %}
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="btn btn-transparent">
        {{ section.settings.button_label }}
      </a>
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

{% schema %}
  {
    "name": "Something unique",
	"class": "something-unique-section",
    "settings": [
	  {
		"type": "checkbox",
		"id": "show_section",
		"label": "Show section",
		"default": true
	  },
	  {
		"type": "image_picker",
		"id": "desk_image",
		"label": "Desktop image"
	  },
	  {
		"type": "image_picker",
		"id": "mob_image",
		"label": "Mobile image"
	  },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Something unique"
      },
	  {
        "type": "richtext",
        "id": "text",
        "label": "Text",
		"default": "<p>If you are looking for something bold, exciting and unique. Find it right here with the new Kyber Crystalâ„¢ Radiance Pendant.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
	]
  }
{% endschema %}

