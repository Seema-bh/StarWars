{% assign localName = request.locale.name | handle %}
{% unless section.settings.hide_section == true %}
<div class="page-width text-center">
  {% if localName == 'english' %}
{% unless section.settings.paragraph == blank %}
{{ section.settings.paragraph }}
{% endunless %}
{% else %}
{% unless section.settings.paragraph-ja == blank %}
{{ section.settings.paragraph-ja }}
{% endunless %}
{% endif %}
</div>
{% endunless %}

{% schema %}
  {
    "name": "Text Section",
	"class": "index-section themepage-text-section fog-text-section",
    "settings": [
	  {
        "type": "checkbox",
        "id": "hide_section",
        "label": "Hide Section",
        "default": false
      },
      {
        "type": "richtext",
        "id": "paragraph",
        "label": "Paragraph",
        "default": "<p>Paragraph</p>"
      },
      {
        "type": "richtext",
        "id": "paragraph-ja",
        "label": "Paragraph (JA)",
        "default": "<p>”銀河の力”コレクションは、反対側に立った者の、勇気と献身的な愛情を表しています。このコレクションは伝説的なWookie™ウォーリアーChewbacca™と並列して、銀河帝国のストームトルーパー軍を表しています。忠誠心のシンボルである勇気と誠実さにインスパイアされたコレクション。</p>"
      }
    ]
  }
{% endschema %}

