<section data-section-id="{{ section.id }}" data-section-type="starwars-banner-section">
  <div class="sw__banner" id="banner-slider">
    {% for block in section.blocks %}
    <div class="sw__banner-slide" title="{{ block.settings.slide-text }}">
      {% unless block.settings.banner_large == nil %}
      <img class="lazyload small--hide"
      data-src="{{ block.settings.banner_large | img_url: 'master' }}"
      data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
      data-sizes="auto"
      alt="header banner" data-image />
      {% endunless %}
      {% unless block.settings.banner_small == nil %}
      <img class="lazyload medium-up--hide"
      data-src="{{ block.settings.banner_small | img_url: 'master' }}"
      data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
      data-sizes="auto"
      alt="header banner" data-image />
      {% endunless %}
      {% unless block.settings.banner_foreground == nil %}
      <div class="sw__banner-img-cont small--hide">
        <img class="lazyload"
        data-src="{{ block.settings.banner_foreground | img_url: 'master' }}"
        data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
        data-sizes="auto"
        alt="foreground" data-image/>
      </div>
      {% endunless %}
      <div class="page-width sw__banner-text
      {% if block.settings.horizontal_alignment == 'center' %} content_center-aligned{% endif %}
      {% if block.settings.horizontal_alignment == 'right' %} content_right-aligned{% endif %}">
      <div class="sw__banner-text-container
      {% if block.settings.vertical_alignment == 'middle' %} content_middle-aligned{% endif %}
      {% if block.settings.vertical_alignment == 'bottom' %} content_bottom-aligned{% endif %}
      {% if block.settings.text_align == 'center' %} text-center{% endif %}
      {% if block.settings.text_align == 'right' %} text-right{% endif %}
      {% if block.settings.full_width_content and block.settings.textand_button_align == 'text_left'%} full-width-alignment1{% endif %}
      {% if block.settings.full_width_content and block.settings.textand_button_align == 'text_right'%} full-width-alignment2{% endif %}">
      {% unless block.settings.title == blank %}
      <h1>{{ block.settings.title }}</h1>
      {% endunless %}
      {% unless block.settings.subtitle == blank %}
      <h5>{{ block.settings.subtitle }}</h5>
      {% endunless %}
      {% unless block.settings.paragraph == blank %}
      <p>{{ block.settings.paragraph }}</p>
      {% endunless %}
      {% unless block.settings.button_label == blank %}
      {% unless block.settings.button_url == blank %}
      <a href="{{ block.settings.button_url }}/" class="btn_style1">{{ block.settings.button_label }}</a>
      {% endunless %}
      {% endunless %}
    </div>
  </div>
</div>
{% endfor %}
</div>
<ul class="mm_banner-dots">
  {% for block in section.blocks %}
  <li>{{ block.settings.slide-text }}</li>
  {% endfor %}
</ul>
</section>
{% schema %}
{
  "name": "Banner Slideshow",
  "class": "index-section index-section--flush",
  "blocks": [
  {
    "type": "banner-content",
    "name": "Banner Content",
    "settings": [
    {
      "type": "image_picker",
      "id": "banner_large",
      "label": "Background Image (Desktop)",
      "info": "Recommended size 2562x1298 (px)"
    },
    {
      "type": "image_picker",
      "id": "banner_small",
      "label": "Background Image (Mobile)",
      "info": "Recommended size 800x1470 (px)"
    },
    {
      "type": "image_picker",
      "id": "banner_foreground",
      "label": "Foreground Image"
    },
    {
      "type": "select",
      "id": "horizontal_alignment",
      "label": "Content Alignment (Horizontal)",
      "options": [
      {
        "value": "left",
        "label": "Left"
      },
      {
        "value": "center",
        "label": "Center"
      },
      {
        "value": "right",
        "label": "Right"
      }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Content Alignment (Vertical)",
      "options": [
      {
        "value": "top",
        "label": "Top"
      },
      {
        "value": "middle",
        "label": "Middle"
      },
      {
        "value": "bottom",
        "label": "Bottom"
      }
      ],
      "default": "top"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Align",
      "options": [
      {
        "value": "left",
        "label": "Left"
      },
      {
        "value": "center",
        "label": "Center"
      },
      {
        "value": "right",
        "label": "Right"
      }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "full_width_content",
      "label": "Text and button side by side",
      "default": false
    },
    {
      "type": "select",
      "id": "textand_button_align",
      "label": "Text & Button Align",
      "options": [
      {
        "value": "text_left",
        "label": "Text Left Button Right"
      },
      {
        "value": "text_right",
        "label": "Text Right Button Left"
      }
      ],
      "default": "text_left"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Han Solo & princess leia"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "<p>Paragraph</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "slide-text",
      "label": "Slide Text",
      "default": "Slide Text"
    }
    ]
  }
  ],
  "presets": [
  {
    "name": "Banner Slideshow",
    "category": "Advanced layout"
  }
  ]
}
{% endschema %}