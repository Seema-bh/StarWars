<section class="new__footer" data-section-type="new__footer" data-section-id="{{ section.id }}">
  <hr class="footer-up">
  <div class="new__footer--inner">
    <div class="copyright">
      <p>©{{ 'now' | date: "%Y" }}. RENAISSANCE GLOBAL, ALL RIGHT RESERVED{% comment %}• {{ shop.name | link_to: routes.root_url }}{% endcomment %}</p>
    </div>
    {% assign footer-menu = linklists[section.settings.footer_linklist] %}
    <div class="footer_links">
      {% for link in footer-menu.links %}        
      <p><a href="{{ link.url }}">{{ link.title }}</a></p>
      {% endfor %}
    </div>
    <div class="social_medias">
      {% if section.settings.connect-with-us != blank %}
      {% assign connect-with-us = section.settings.connect-with-us %}
      <p>{{ connect-with-us }}</p>
      <ul>
        {% if settings.social_facebook_link != blank %}
        <li>
          <a href="{{ settings.social_facebook_link | escape }}">
            {% include 'icon-facebook' %}
          </a>
        </li>
        {% endif %}
        {% if settings.social_instagram_link != blank %}
        <li>
          <a href="{{ settings.social_instagram_link | escape }}">
            {% include 'icon-instagram' %}
          </a>
        </li>
        {% endif %}
      </ul>
      {% endif %}
    </div>
  </div>
  <hr class="footer-down">
</section>

<style>
  {% if template contains 'index' or template contains 'account' or template contains 'order' or template contains 'addresses' or template contains 'cart' or page.title contains 'Balance of the force' or page.title contains 'Collections' or page.title contains 'Celestial Love' or page.title contains 'Balance of nature' or page.title contains 'Forces of the galaxy' or page.title contains 'Friendship' or page.title contains 'Into the galaxy' or page.title contains 'The Mandalorian And the Child' or page.title contains 'About Us' %}
  .new__footer--inner {
    background: {% if page.title contains 'Collections' or page.title contains 'About Us' or template contains 'account' or template contains 'order' or template contains 'addresses' %}#000{% else %}#151515{% endif %};
  }
  .new__footer hr {
    border-color: #303030;
  }
  .copyright {
    border-right: 1px solid #303030;
  }
  .social_medias {
  	border-left: 1px solid #303030;
  }
  .copyright:before,
  .copyright:after,
  .social_medias:before,
  .social_medias:after {
    background: #303030;
  }
  @media (max-width: 1023px) {
    .copyright {
      border: none;
    }
    .social_medias {
      border: none;
    }
    .new__footer:before {
      border-left: 1px solid #303030;
    }
    .new__footer:after {
      border-right: 1px solid #303030;
    }
  }
  {% else %}
  .new__footer--inner {
    background: #FFF;
  }
  .new__footer hr {
    border-color: #ced6da;
  }
  .copyright {
    border-right: 1px solid #ced6da;
  }
  .social_medias {
  	border-left: 1px solid #ced6da;
  }
  .copyright:before,
  .copyright:after,
  .social_medias:before,
  .social_medias:after {
    background: #ced6da;
  }
  @media (max-width: 1023px) {
    .copyright {
      border: none;
    }
    .social_medias {
      border: none;
    }
    .new__footer:before {
      border-left: 1px solid #ced6da;
    }
    .new__footer:after {
      border-right: 1px solid #ced6da;
    }
  }
  {% endif %}
</style>

{% schema %}
  {
    "name": "New Footer",
    "settings": [
      {
        "type": "text",
        "id": "connect-with-us",
        "label": "Text"
      },
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "Menu"
      }
    ]
  }
{% endschema %}